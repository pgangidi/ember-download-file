<div class="file-container__link-wrapper">
  <div class="file-container__checkbox-section">
    <input type="checkbox" id="selectall-checkbox" onClick={{action "onSelectAllClick"}} aria-checked="{{isSelectedAllCheckboxChecked}}">
    <label for="selectall-checkbox" class="is-sr-only">
      {{t "selectAllLabel"}}
    </label>
  </div>
  <div role="alert" class="file-container__selected-count">
    {{#if noOfFilesSelected}}
      {{t "selectedCount" noOfFilesSelected=noOfFilesSelected}}
    {{else}}
      {{t "noneSelected"}}
    {{/if}}
  </div>
  <div class="file-container__download-section">
    {{t "downloadSelected"}}
  </div>
</div>
{{file-table 
  fileList=fileList
  noOfAvailableFiles=noOfAvailableFiles
  noOfFilesSelected=noOfFilesSelected
  isSelectedAllCheckboxChecked=isSelectedAllCheckboxChecked
  onRowClick=(action "onRowClick")
}}